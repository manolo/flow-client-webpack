{
  "compilerOptions": {
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "module": "esNext",
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,    
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,

    "outDir": "target/classes/META-INF/resources/frontend",
  },
  "include": [
    "src/main/resources/META-INF/resources/frontend/**/*"
  ]
}
